{
    "name": "problems-fix-runner",
    "displayName": "Problems Fix Runner",
    "description": "loop over problems in document by source and show quick fix options",
    "version": "0.0.8",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/vscode-problems-fix-runner",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pfr",
                "title": "Problems Fix Runner"
            },
            {
                "command": "pfr.next",
                "title": "Problems Fix Runner: next"
            },
            {
                "command": "pfr.lineProblem",
                "title": "Problems Fix Runner: smart goto problem"
            }
        ],
        "keybindings": [
            {
                "command": "pfr.next",
                "key": "escape",
                "mac": "escape",
                "when": "pfrIsRunning"
            },
            {
                "command": "pfr.lineProblem",
                "key": "ctrl+.",
                "mac": "cmd+.",
                "when": "editorIsOpen && !editorReadonly"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "pfr",
                    "when": "editorIsOpen && !editorReadonly"
                },
                {
                    "command": "pfr.next",
                    "when": "false"
                },
                {
                    "command": "pfr.lineProblem",
                    "when": "editorIsOpen && !editorReadonly"
                }
            ]
        },
        "configuration": {
            "title": "Problems Fix Runner",
            "type": "object",
            "properties": {
                "problems-fix-runner.list": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "cSpell"
                    ],
                    "description": "listen to problems from this extensions only"
                },
                "problems-fix-runner.menuListType": {
                    "type": "string",
                    "default": "suggestion",
                    "enum": [
                        "quickfix",
                        "suggestion"
                    ],
                    "description": "fix suggestion list type",
                    "enumDescriptions": [
                        "show quickfix context menu",
                        "show suggestion menu"
                    ]
                },
                "problems-fix-runner.exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "^Add.*(user|folder) dictionary$"
                    ],
                    "description": "exclude items from suggestion menu list"
                },
                "problems-fix-runner.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "list all problems information in current document to output panel"
                },
                "problems-fix-runner.waitFor": {
                    "type": "number",
                    "default": 10,
                    "description": "time in seconds b4 stop or going to next problem if no suggestion was made"
                }
            }
        }
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.41.0",
        "eslint": "^6.6.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    },
    "dependencies": {
        "lodash.debounce": "^4.0.8"
    }
}
